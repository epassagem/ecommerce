      <% end %>
      </ul>
    </div>
  <% end %>
<%= current_client.street%>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 40 , :value => current_client.name%>
    <%= f.text_field :email, size: 40 , :value => current_client.email%>
    <%= f.text_field :address, size: 40 , :value => current_client.street%>
    <%= f.text_field :client_id, size: 40 , :value => current_client.id%>
  </div>

  <div class="field">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
     </div>
